    "meow": "^6.0.0",
    "nyc": "^14.1.1",
    "opener": "^1.5.1",
    "prettier": "^3.1.1",
    "redent": "^3.0.0",
    "sinon": "15.0.2",
    "tape": "^4.11.0",
    "ts-jest": "^29.1.1",
    "typescript": "~5.2.2"
  },
  "dependencies": {
    "@aws-sdk/client-cloudformation": "^3.414.0",
